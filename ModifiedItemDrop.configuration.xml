<?xml version="1.0" encoding="utf-8"?>
<!--
  ModifiedItemDrop 插件配置

  - 所有“概率”字段都是 0 ~ 1 的浮点数：
      0   = 永远不掉
      0.5 = 50% 概率掉落
      1   = 必定掉落
  - 修改后可在游戏内执行 /mid reload 即时生效。
-->
<ModifiedItemDropConfiguration xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- true = 打印详细日志（用于调试）；线上建议 false -->
  <EnableDebugLogging>true</EnableDebugLogging>

  <RuleSet>
    <!-- 全局兜底概率：当物品既没有命中 Region 也没有命中 CustomItem 时使用 -->
    <GlobalDefaultChance>1</GlobalDefaultChance>

    <!-- 针对不同背包页 / 槽位的基础掉落概率 -->
    <RegionChances>
      <!-- 主武器（页 0）：100% 掉落 -->
      <RegionChanceEntry>
        <Region>PrimaryWeapon</Region>
        <Chance>1</Chance>
      </RegionChanceEntry>
      <!-- 副武器（页 1）：0% 掉落 -->
      <RegionChanceEntry>
        <Region>SecondaryWeapon</Region>
        <Chance>0</Chance>
      </RegionChanceEntry>
      <!-- 其他背包页：100% 掉落 -->
      <RegionChanceEntry>
        <Region>Inventory</Region>
        <Chance>1</Chance>
      </RegionChanceEntry>
    </RegionChances>

    <!-- 针对具体物品 ID 的专属概率；如果不需要可保持空标签 -->
    <CustomItemChances>
      <!-- 示例：
      <ItemChanceEntry>
        <ItemID>15</ItemID>
        <Chance>0.75</Chance>
      </ItemChanceEntry>
      -->
    </CustomItemChances>

    <!-- 衣物本体与内部容器规则 -->
    <ClothingRules>
      <!-- 上衣：本体 100% 掉落，内部物品 100% 掉落 -->
      <ClothingSlot>
        <Slot>Shirt</Slot>
        <SlotDropChance>1</SlotDropChance>
        <ContentsDropMode>UseContentsChance</ContentsDropMode>
        <ContentsDropChance>1</ContentsDropChance>
      </ClothingSlot>
      <!-- 裤子：本体 100% 掉落，内部物品 100% 掉落 -->
      <ClothingSlot>
        <Slot>Pants</Slot>
        <SlotDropChance>1</SlotDropChance>
        <ContentsDropMode>UseContentsChance</ContentsDropMode>
        <ContentsDropChance>1</ContentsDropChance>
      </ClothingSlot>
      <!-- 背包：本体保留，内部物品 100% 掉落 -->
      <ClothingSlot>
        <Slot>Backpack</Slot>
        <SlotDropChance>0</SlotDropChance>
        <ContentsDropMode>UseContentsChance</ContentsDropMode>
        <ContentsDropChance>1</ContentsDropChance>
      </ClothingSlot>
      <!-- 防弹衣：本体保留，内部物品 45% 掉落 -->
      <ClothingSlot>
        <Slot>Vest</Slot>
        <SlotDropChance>0</SlotDropChance>
        <ContentsDropMode>UseContentsChance</ContentsDropMode>
        <ContentsDropChance>0.45</ContentsDropChance>
      </ClothingSlot>
      <!-- 头部饰品默认保留，ContentsDropMode=Preserve 表示内部物品（若有）也保留 -->
      <ClothingSlot>
        <Slot>Hat</Slot>
        <SlotDropChance>0</SlotDropChance>
        <ContentsDropMode>Preserve</ContentsDropMode>
        <ContentsDropChance>0</ContentsDropChance>
      </ClothingSlot>
      <ClothingSlot>
        <Slot>Mask</Slot>
        <SlotDropChance>0</SlotDropChance>
        <ContentsDropMode>Preserve</ContentsDropMode>
        <ContentsDropChance>0</ContentsDropChance>
      </ClothingSlot>
      <ClothingSlot>
        <Slot>Glasses</Slot>
        <SlotDropChance>0</SlotDropChance>
        <ContentsDropMode>Preserve</ContentsDropMode>
        <ContentsDropChance>0</ContentsDropChance>
      </ClothingSlot>
    </ClothingRules>
  </RuleSet>
</ModifiedItemDropConfiguration>